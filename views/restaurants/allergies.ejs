<% layout('layouts/boilerplate') %>


<div class="content-wrapper">
    <h1 class="main-title">Common Food Allergies</h1>
    <p class="subtitle">Learn about common food allergies, their symptoms, and where they're typically found</p>
    
    <div class="allergy-grid">
  
      <!-- Gluten -->
      <div class="allergy-card">
        <h2 class="allergy-title">Gluten</h2>
        <p class="allergy-description">A protein found in wheat, barley, rye, and some other grains</p>
        <div class="allergy-details">
          <div class="allergy-section">
            <h3 class="section-title">Commonly Found In:</h3>
            <ul class="item-list">
              <li>Bread</li>
              <li>Pasta</li>
              <li>Cereals</li>
              <li>Baked goods</li>
            </ul>
          </div>
          <div class="allergy-section">
            <h3 class="section-title">Common Symptoms:</h3>
            <ul class="item-list">
              <li>Digestive issues</li>
              <li>Fatigue</li>
              <li>Headaches</li>
              <li>Joint pain</li>
            </ul>
          </div>
        </div>
      </div>
  
      <!-- Dairy -->
      <div class="allergy-card">
        <h2 class="allergy-title">Dairy</h2>
        <p class="allergy-description">Products containing milk proteins (casein and whey)</p>
        <div class="allergy-details">
          <div class="allergy-section">
            <h3 class="section-title">Commonly Found In:</h3>
            <ul class="item-list">
              <li>Milk</li>
              <li>Cheese</li>
              <li>Yogurt</li>
              <li>Ice cream</li>
            </ul>
          </div>
          <div class="allergy-section">
            <h3 class="section-title">Common Symptoms:</h3>
            <ul class="item-list">
              <li>Digestive issues</li>
              <li>Bloating</li>
              <li>Skin reactions</li>
              <li>Respiratory problems</li>
            </ul>
          </div>
        </div>
      </div>
  
      <!-- Nuts -->
      <div class="allergy-card">
        <h2 class="allergy-title">Nuts</h2>
        <p class="allergy-description">Tree nuts and peanuts (which are actually legumes)</p>
        <div class="allergy-details">
          <div class="allergy-section">
            <h3 class="section-title">Commonly Found In:</h3>
            <ul class="item-list">
              <li>Peanut butter</li>
              <li>Baked goods</li>
              <li>Asian cuisine</li>
              <li>Candy</li>
            </ul>
          </div>
          <div class="allergy-section">
            <h3 class="section-title">Common Symptoms:</h3>
            <ul class="item-list">
              <li>Anaphylaxis</li>
              <li>Hives</li>
              <li>Swelling</li>
              <li>Difficulty breathing</li>
            </ul>
          </div>
        </div>
      </div>
  
      <!-- Seafood -->
      <div class="allergy-card">
        <h2 class="allergy-title">Seafood</h2>
        <p class="allergy-description">Fish and shellfish allergies</p>
        <div class="allergy-details">
          <div class="allergy-section">
            <h3 class="section-title">Commonly Found In:</h3>
            <ul class="item-list">
              <li>Fish</li>
              <li>Shellfish</li>
              <li>Fish sauce</li>
              <li>Seafood flavoring</li>
            </ul>
          </div>
          <div class="allergy-section">
            <h3 class="section-title">Common Symptoms:</h3>
            <ul class="item-list">
              <li>Anaphylaxis</li>
              <li>Hives</li>
              <li>Nausea</li>
              <li>Digestive issues</li>
            </ul>
          </div>
        </div>
      </div>
  
      <!-- Eggs -->
      <div class="allergy-card">
        <h2 class="allergy-title">Eggs</h2>
        <p class="allergy-description">Allergy to egg whites, yolks, or both</p>
        <div class="allergy-details">
          <div class="allergy-section">
            <h3 class="section-title">Commonly Found In:</h3>
            <ul class="item-list">
              <li>Baked goods</li>
              <li>Mayonnaise</li>
              <li>Pasta</li>
              <li>Dressings</li>
            </ul>
          </div>
          <div class="allergy-section">
            <h3 class="section-title">Common Symptoms:</h3>
            <ul class="item-list">
              <li>Skin reactions</li>
              <li>Stomach pain</li>
              <li>Respiratory issues</li>
              <li>Anaphylaxis</li>
            </ul>
          </div>
        </div>
      </div>
  
      <!-- Soy -->
      <div class="allergy-card">
        <h2 class="allergy-title">Soy</h2>
        <p class="allergy-description">Allergy to soybeans or soy-based products</p>
        <div class="allergy-details">
          <div class="allergy-section">
            <h3 class="section-title">Commonly Found In:</h3>
            <ul class="item-list">
              <li>Soy sauce</li>
              <li>Tofu</li>
              <li>Edamame</li>
              <li>Processed foods</li>
            </ul>
          </div>
          <div class="allergy-section">
            <h3 class="section-title">Common Symptoms:</h3>
            <ul class="item-list">
              <li>Digestive issues</li>
              <li>Skin reactions</li>
              <li>Respiratory issues</li>
              <li>Anaphylaxis</li>
            </ul>
          </div>
        </div>
      </div>
  
      <!-- Sesame -->
      <div class="allergy-card">
        <h2 class="allergy-title">Sesame</h2>
        <p class="allergy-description">A common allergen found in seeds and oils</p>
        <div class="allergy-details">
          <div class="allergy-section">
            <h3 class="section-title">Commonly Found In:</h3>
            <ul class="item-list">
              <li>Hummus</li>
              <li>Sesame oil</li>
              <li>Bakery products</li>
              <li>Asian cuisine</li>
            </ul>
          </div>
          <div class="allergy-section">
            <h3 class="section-title">Common Symptoms:</h3>
            <ul class="item-list">
              <li>Hives</li>
              <li>Swelling</li>
              <li>Difficulty breathing</li>
              <li>Anaphylaxis</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  